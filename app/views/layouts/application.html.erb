<!DOCTYPE html>
<html lang="en">
<head>
  <title>Museum Manager</title>

  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <meta name="image" property="og:image" content="https://i.imgur.com/q7PSxci.jpg" /> 

  <style>
    body,
    html {
      background-image: url("/images/bg.jpg");
      background-repeat: repeat;
      height: 100%;
      min-height: 100%;
    }

    .field_with_errors {
      padding: 2px;
      background-color: red;
    }

    table,
    td,
    th {
      border: 1px solid black;
      border-collapse: collapse;
    }

    td,
    th {
      padding: 15px;
    }

    .sidenav {
      padding-top: 20px;
      background-color: rgba(128, 128, 128, 0.40);
      color: black;
      border-radius: 25px;
    }

    .bigimg {
      height: 5px;
    }

    .header {
      font-size: 30px;
      padding: 4px;
      margin: 0 auto;
      background-color: rgba(128, 128, 128, 0.70);
    }

    .wrapper {
      padding: 15px;
      margin: 0 auto;
      background-color: rgba(128, 128, 128, 0.5);
      color: black;
      border-radius: 25px;
    }

    .well {
      background-color: #808080;
    }

    .most-exhibits {
      padding-bottom: 15px;
    }
  </style>
  </head>
  <body>

    <!-- Top Navbar -->
    <nav class="navbar navbar-inverse">
      <div class="navbar-header">
        <% if current_user %>
        <%= link_to "Museum Manager", user_path(current_user), :class => "navbar-brand" %>
        <% else %>
        <%= link_to "Museum Manager", root_path, :class => "navbar-brand" %>
        <% end %>
      </div>
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar"></button>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to "Exhibits", exhibits_path %>
            </li>
            <li>
              <%= link_to "Museums", museums_path %>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li>
              <%= link_to "Logout", logout_path %>
              </li>
            <% else %>
              <li>
                <%= link_to "Login", login_path %>
              </li>
              <li>
              <%= link_to "Sign Up", signup_path %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>

    <!-- left nav imgs -->

    <div class="col-sm-2 sidenav">
      <div class="well">
        <img src="/images/egyptian.jpg" alt="egyptian" style="width: 100%">
      </div>
      <div class="well">
        <img src="/images/doge.jpg" alt="doge" style="width: 100%">
      </div>
      <div class="well">
        <img src="/images/armor.jpg" alt="armor" style="width: 100%">
      </div>
    </div>

    <div class="col-sm-8 text-center">
      <div class="wrapper">

        <!-- Header -->
        <header class="header">
          Museum Manager
        </header>

        <%= yield %>

      </div>
    </div>

    <!-- right nav imgs -->

    <div class="col-sm-2 sidenav">
      <div class="well">
        <img src="/images/painting.jpeg" alt="painting" style="width: 100%">
      </div>
      <div class="well">
        <img src="/images/flintlock.jpg" alt="flintlock" style="width: 100%">
      </div>
      <div class="well">
        <img src="/images/amphora.jpg" alt="amphora" style="width: 100%">
      </div>
    </div>

  </body>
</html>
